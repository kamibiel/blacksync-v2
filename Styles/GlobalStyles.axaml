<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Estilo base do TextBox -->
  <Style Selector="TextBox">
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Padding" Value="6"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderBrush" Value="#8000C0"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="4"/>
    <Setter Property="CaretBrush" Value="White"/>
  </Style>

  <!-- BotÃµes do Menu -->
  <Style Selector="Button.menu-button">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="BorderBrush" Value="Transparent"/>
    <Setter Property="Padding" Value="10"/>
  </Style>

  <Style Selector="Button.menu-button:pointerover">
    <Setter Property="Background" Value="#8A0194"/>
  </Style>

  <Style Selector="Button.menu-button:pressed">
    <Setter Property="Background" Value="#A000D0"/>
  </Style>

</Styles>
