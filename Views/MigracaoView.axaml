<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BlackSync.Views.MigracaoView">
  <ScrollViewer>
    <StackPanel Spacing="15" Margin="20">

      <!-- Título -->
      <TextBlock Text="Migração de Tabelas Firebird → MySQL"
                 FontSize="20"
                 FontWeight="Bold"
                 HorizontalAlignment="Center"
                 Margin="0,0,0,10"/>

      <!-- Tabelas Firebird -->
      <StackPanel>
        <TextBlock Text="Tabelas Firebird"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0,0,0,5"/>

        <CheckBox x:Name="cbMarcarTodas"
          Content="Selecionar todas as tabelas"
          Checked="CbMarcarTodas_Changed"
          Unchecked="CbMarcarTodas_Changed"
          Margin="0,0,0,10"/>

        <ListBox x:Name="lbTabelasFirebird"
                 Focusable="True"
                 SelectionMode="Multiple"
                 Height="200">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <CheckBox Content="{Binding Nome}" IsChecked="{Binding Selecionado, Mode=TwoWay}" />
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </StackPanel>

      <!-- Botões -->
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
        <Button x:Name="btnMigrar" Content="Migrar tabelas" Width="130" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="btnVerificarTabelas" Content="Verificar tabelas" Width="130" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="btnVerificarEstrutura" Content="Verificar estrutura" Width="150" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
      </StackPanel>

      <!-- Log -->
      <StackPanel>
        <TextBlock Text="Log de verificação"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0,10,0,5"/>
        <TextBox x:Name="txtLog"
                 AcceptsReturn="True"
                 IsReadOnly="True"
                 Height="150"
                 Foreground="#000"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
      </StackPanel>

      <!-- Barra de progresso -->
      <ProgressBar x:Name="pbMigracao"
                   Height="10"
                   Minimum="0"
                   Maximum="100"
                   Value="0"
                   IsVisible="False"/>

      <!-- Gerar Scripts -->
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
        <Button x:Name="btnGerarScripts"
                Content="Gerar Scripts"
                HorizontalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                Width="180"
                Margin="0,10,0,0"/>
        <Button x:Name="btnGerarFeedback"
                Content="Gerar Feedback"
                HorizontalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                Width="180"
                Margin="0,10,0,0"/>
      </StackPanel>
    </StackPanel>
  </ScrollViewer>
</UserControl>
