<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="BlackSync.Views.Dialogs.CustomInputDialog"
        Width="400" Height="180" CanResize="False" WindowStartupLocation="CenterOwner"
        Title="{Binding Titulo}">
  <StackPanel Margin="20" VerticalAlignment="Center" Spacing="10">
    <TextBlock Text="{Binding Mensagem}" TextWrapping="Wrap" TextAlignment="Center" />
    <TextBox x:Name="InputBox" Width="350" HorizontalAlignment="Center" />
    <Button Content="OK" Width="80" HorizontalAlignment="Center" Click="Ok_Click"/>
  </StackPanel>
</Window>
